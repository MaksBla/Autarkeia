<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="530dp"
    android:layout_gravity="center"
    android:background="@drawable/gradieantmenu"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnbookmarks"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/bookmarksbutton" />



        <Button
            android:id="@+id/btcontinue"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/btnbookmarks"
            android:layout_marginTop="15dp"
            android:background="@drawable/ccontinuebutton" />

        <Button
            android:id="@+id/btnintroduction"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/btcontinue"
            android:layout_marginTop="15dp"
            android:background="@drawable/iintroductionbutton" />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btnintroduction"
            android:background="@drawable/ssavebutton"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="208dp"
            android:layout_height="29dp"
            android:layout_below="@+id/btnintroduction"
            android:layout_marginStart="24dp"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/buttonUpdate"
            android:max="100"
            android:progress="50" />


        <TextView
            android:id="@+id/textviewprom"
            android:layout_width="185dp"
            android:layout_height="70dp"
            android:layout_below="@id/buttonUpdate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="Подсказки"
            android:textColor="#F5F5F5"
            android:textSize="50dp"
            />

        <ToggleButton
            android:id="@+id/TGButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@id/seekBar"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/textviewprom"
            android:background="@drawable/promt_anim"

            android:text=""
            android:textOff=""
            android:textOn="" />
        <Button
            android:id="@+id/bynClose"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:layout_below="@id/textviewprom"
            android:background="@drawable/cclosbuyyon" />

    </RelativeLayout>

</LinearLayout>